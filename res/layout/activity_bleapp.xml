<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.bleapp.BLEApp" >

    <RelativeLayout
        android:id="@+id/ButtonLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >
        
        <LinearLayout 
            android:layout_width="fill_parent"
        	android:layout_height="wrap_content">
             <Button
		        android:id="@+id/button1"
		        android:layout_weight="1"
		        android:layout_width="1dp"
		        android:layout_height="fill_parent"
		        android:layout_alignParentLeft="true"
		        android:layout_alignParentTop="true"
		        android:text="Connect"
		        android:textSize="12dp" />
		
		    	<Button
		        android:id="@+id/button2"
		        android:layout_weight="1"
		        android:layout_width="1dp"
		        android:layout_height="fill_parent"
		        android:layout_alignBottom="@+id/button1"
		        android:layout_toRightOf="@+id/button1"
		        android:text="Disconnect"
		        android:textSize="12dp" />
		    	
		    	<Button
		        android:id="@+id/button3"
		        android:layout_weight="1"
		        android:layout_width="1dp"
		        android:layout_height="fill_parent"
		        android:layout_alignBottom="@+id/button1"
		        android:layout_toRightOf="@+id/button2"
		        android:text="Buzz"
		        android:textSize="12dp" />
        </LinearLayout>
       
    </RelativeLayout>
    
    <RelativeLayout 
        android:id="@+id/ButtonLayout3"
       	android:layout_width="fill_parent"
    	android:layout_height="60dp"
   		android:layout_below="@+id/ButtonLayout">
        
        <LinearLayout 
            android:layout_width="fill_parent"
    		android:layout_height="fill_parent">
            <TextView
		        android:id="@+id/connStatus"
		        android:layout_width="1dp"
		        android:layout_height="fill_parent"
		        android:gravity="center"
		        android:layout_weight="1"
		        android:text="Status:DISCONNECTED"/>
        	<TextView
		        android:id="@+id/percentagetext"
		        android:layout_width="1dp"
		        android:layout_height="fill_parent"
		        android:gravity="center"
		        android:layout_weight="1"
		        android:text="Percentage:0%"/>
        </LinearLayout>
    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/ButtonLayout2"
       	android:layout_width="fill_parent"
    	android:layout_height="100dp"
   		android:layout_below="@+id/ButtonLayout3">
        
        <LinearLayout 
           	android:layout_width="fill_parent"
    		android:layout_height="match_parent" >
            	<Button
		        android:id="@+id/button4"
		        android:layout_weight="1.2"
		        android:layout_width="1dp"
		        android:layout_height="fill_parent"
		        android:layout_alignParentLeft="true"
		        android:layout_alignParentTop="true"
		        android:text="-"
		        android:textSize="18dp"
		        android:background="@drawable/lightoff"
		        android:gravity="center"/>

            	<ProgressBar
            	    android:id="@+id/progressBar1"
            	    style="?android:attr/progressBarStyleHorizontal"
            	    android:layout_width="wrap_content"
            	    android:layout_height="fill_parent"
            	    android:layout_gravity="center"
            	    android:layout_weight="2.4"
            	    android:max="100"
            	    android:progressDrawable="@drawable/custom_progressbar" />
				
		    	<Button
		        android:id="@+id/button5"
		        android:layout_weight="1.2"
		        android:layout_width="1dp"
		        android:layout_height="fill_parent"
		        android:layout_alignBottom="@+id/button1"
		        android:layout_toRightOf="@+id/button1"
		        android:text="+"
		        android:textSize="18dp"
		        android:background="@drawable/lighton"
		        android:gravity="center" />
        </LinearLayout>
        
    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/ConsoleTitle"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_below="@+id/ButtonLayout2" >
	
	    <TextView
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:gravity="center"
	        android:text="Console"/>
	</RelativeLayout>
	<RelativeLayout
	    android:layout_width="fill_parent"
	    android:layout_height="match_parent"
	    android:layout_below="@+id/ConsoleTitle" >
	
	    <TextView
	        android:id="@+id/myView"
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:maxLines = "100"
	        android:scrollbars = "vertical"
	        android:gravity="bottom"
	        android:background="@drawable/black"
	        android:textColor="@android:color/white"/>
	</RelativeLayout>
    
        

</RelativeLayout>
